<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions" %>
<%@ taglib prefix="mt" uri="http://taglib.com/my_tags" %>

<fmt:setLocale value='${sessionScope.get("locale")}'/>
<fmt:setBundle basename="messages"/>

<c:set var="url"
       value="${pageContext.request.requestURL}"/>

<c:set var="isAdmin"
       value='${sessionScope.user.roleId==applicationScope.get("admin_role_id")}'/>
<c:set var="isSubscriber"
       value='${sessionScope.user.roleId==applicationScope.get("subscriber_role_id")}'/>

<c:set var="roleName" value='${isAdmin?"admin":"subscriber"}'/>
<c:set var="root" value="${pageContext.request.contextPath}"/>